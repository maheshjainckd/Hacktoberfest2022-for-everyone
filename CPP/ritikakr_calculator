#include <iostream>
using namespace std;

int main(){
    int a, b, output;
    char input;
    cout<<"Enter Value 1 and Value 2 : ";
    cin>>a>>b;
    cout<<"Enter The Arithmetic Operation You Want (+, -, /, x) : ";
    cin>>input;
    switch(input){
        case '+': output = a + b; 
        break;
        case '-': output = a - b; 
        break;
        case '/': output = a / b; 
        break;
        case 'x': output = a * b; 
        break;
        default: cout<<"Invalid Operation";
    }
    cout<<output;
    return 0;
}
